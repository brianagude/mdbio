 <script
  src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"></script>
<div class="pro-two">
  <div class="wrapper-in" >
        <div class="pro-ve">
        	<div class="vid" data-aos="fade-up" data-aos-duration="800">
              {% if section.settings.why_image != blank %}
              <img class="main-imu-lo" src="{{ section.settings.why_image | img_url: 'master' }}">
                <button class="triger-img-why" id="trigger_img-why">
                  <img src="https://cdn.shopify.com/s/files/1/0617/6876/1575/files/icon.png?v=1651814274">
                </button>
              {% endif %}
		  	</div>
            <div class="over-img-why" id="overlay_img-why">
              <div id="popup_img-why">
                <div class="close-image-why" id="close_img-why">X</div>
                <div class="you-tube-vd">
                 {{ section.settings.heading }}
                </div>
              </div>
          </div>
        </div>
    
    <div class="new-heading-pro">
      {%- if section.settings.preheading != blank -%}
      <h2>{{ section.settings.preheading }}</h2>
      {% endif %}
      {%- if section.settings.para != blank -%}
      <p>{{ section.settings.para }}</p> 
      {% endif %}
    </div>
  </div>   
</div>

<script>
  jQuery(document).ready(function() {
    var url16 = $('.over-img-why iframe').attr('src');
    jQuery('.triger-img-why').click(function() {
      setTimeout(function(){
        console.log(url16);
        jQuery('.over-img-why iframe').attr('src',url16);
        jQuery('.over-img-why').fadeIn(300);
        jQuery('.over-img-why').css('display','block');
      }, 500);
    });
    $('.close-image-why').click(function() {
      setTimeout(function(){
        jQuery('.over-img-why iframe').attr('src','');
        jQuery('.over-img-why').fadeOut(300);
      }, 300);
    });
 });
</script>
<style>
  .wrapper-in {
    max-width: 1100px;
}
  img.main-imu-lo {
    width: 100%;
}
  .video-why-class .pro-two {
    margin: 0 auto;
    width: 100%;
}
  .pro-ve {
    margin-top: -110px;
}
  button#trigger_img-why img {border: 0;}
button#trigger_img-why {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
}
    button#trigger_img-why {
    background: transparent;
    border: none;
    top:0;
  }
  #overlay_img-why{
    z-index: 9999;
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.8);
    display: none;
  }
  #popup_img-why {
max-width: 800px;
    background: transparent;
    margin: 0 auto;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    transition: opacity .25s ease-out;
    width: 100%;
  }
  .vido {
    width: 100%;
  }
  #close_img-why {
    position: absolute;
    z-index: 9;
    top: 8px;
    left: 0;
    cursor: pointer;
    color: #000;
    fill: #000;
    background: #fff;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
  }
  .video-wrapper-inner{
    height: 498px;
    background-repeat: no-repeat;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-position: center;
    background-size: contain;
  }
  .vid {
    position:relative;
    margin: 0 auto;
    padding: 0;
    width:100%;
}
button#trigger_img-why {
    cursor: pointer;
}
  .video-why-class .pro-two {
    margin: 0 auto;
}

.video-why-class {
    margin-bottom: 0px;
    background: #fff;
}

.video-why-class .pro-ve img {
    border: 0;
}
  .new-heading-pro {
    display: flex;
    margin-top: 30px;
    margin-bottom: 50px;
    flex-wrap: wrap;
}

.new-heading-pro h2 {
    width: 39%;
    font-size: 32px;
    color: #92bbd5;
  line-height: normal;
}
.new-heading-pro p {
    width: 59%;
      font-size: 20px;
}
@media screen and (max-width:1100px){  
.video-why-class .pro-two {
