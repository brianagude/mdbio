<div class="blog-content blog-content--{{ section.id }}-1">
    <div class="wrapper" >
      <div class="blog-p_p" >
        {% comment %}
          {%- for block in section.blocks -%}
          <div class="blog-one" id="block-{{ block.id }}">
            {%- if block.settings.text_url != blank -%}
            <a href="{{ block.settings.text_url }}">
            <div class="blog-a-image">
              {%- if block.settings.image != blank -%} 
              <img class="blog-a-one" src="{{ block.settings.image | img_url: 'master' }}">
              {%- endif -%}
            </div>
            <div class="blog-a-text">
              {%- if block.settings.subheading != blank -%}
                <h4 style="color:{{ block.settings.colorsubheading }};'">{{ block.settings.subheading }}</h4>
              {%- endif -%}
                 {%- if block.settings.text11 != blank -%}
                <h2>{{ block.settings.text11 }}</h2>
              {%- endif -%}
            </div>
              </a>
             {%- endif -%}
          </div>
        {%- endfor -%}
{% endcomment %}

      {%- assign blogtag = page.metafields.custom.blog_tag -%}
        {% for article in blogs.doctors-desk.articles %}   
            {% if article.tags contains blogtag and article.tags!= null and article.tags!= "" %}
              <div class="blog-one">
                <div class="blog-a-image">
                  <a href="{{ article.url }}"><img src="{{ article.image.src | img_url: '533x' }}" ></a>
                </div>
                <div class="blog-a-text">
                  <a href="{{ article.url }}"><h2>{{ article.title }}</h2></a>
                </div>
              </div>
            {% endif %}
        {% endfor %}
      </div>
  </div>
  
</div>
