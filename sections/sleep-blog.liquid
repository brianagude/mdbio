{
  "name": "Blog Top",
  "class": "abt-blog-cls",  
      "settings": [],
  		"blocks": [
     {
       "name": "Blog",
       "type": "Blog",
       "settings": [
		{
		  "type": "url",
          "id": "text_url",
          "label": "Button URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image one"
        },
		{
          "type": "text",
          "id": "text11",
          "label": "Heading"
        },
		{
          "type": "text",
          "id": "subheading",
          "label": "sub heading"
        },
		{
        "type": "color",
        "id": "colorsubheading",
        "label": "Sub Headings color",
        "default": "#3d4246"
      },
		{
		  "type": "text",
          "id": "text2",
          "label": "Button"
        }
      ]
}
   ]
}

{% endschema %}