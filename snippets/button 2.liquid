{% comment %}
Required values
label: <string>
______________
Optional values
href: <string>
type: <string>
style: <string>
class: <string>
attribute: <string>
{% endcomment %}

{% if label != blank %}
  {% if type == "link" %}
    <a {% if href != blank %}href="{{ href }}"{% endif %} class="button {{ style }} {{ class }}" {{ attribute }}><span></span>{{ label }}</a>
  {% else %}
<button type="{{ type }}" class="button {{ style }} {{ class }}" {{ attribute }}><span></span>{{ label }}</button>
  {% endif %}
{% endif %}
