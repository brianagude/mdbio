<div class="grid-view-item{% unless variant.available %} grid-view-item--sold-out{% endunless %} product-card" data-product-card>
<!--   <a class="grid-view-item__link grid-view-item__image-container full-width-link" href="{{ variant.url | within: collection }}">
    <span class="visually-hidden">{{ product.title }} - {{variant[product_option_key]}}</span>
  </a> -->
 
  {% capture img_id %}ProductCardImage-{{ section.id }}-{{ product.id }}{% endcapture %}
  {% capture wrapper_id %}ProductCardImageWrapper-{{ section.id }}-{{ product.id }}{% endcapture %}
  {%- assign img_url = variant.image | img_url: '1x1' | replace: '_1x1.', '_400x.' -%}
 {% comment %}
  {% unless variant.image == blank %}
    {% render 'product-thumbnail' with image: product.featured_image, width: max_height, height: max_height, small_style: true, wrapper_id: wrapper_id, img_id: img_id %}
  {% endunless %}
 {% endcomment %}
  <div class="product-card__image-with-placeholder-wrapper 123" data-image-with-placeholder-wrapper>
    <div id="{{ wrapper_id }}" class="grid-view-item__image-wrapper product-card__image-wrapper js">
      <div class="lop-ia" style="padding-top:{% unless product.featured_image == blank %}{{ 1 | divided_by: product.featured_image.aspect_ratio | times: 0 }}%{% else %}0%{% endunless %};">
        <img id="{{ img_id }}"
              class="grid-view-item__image lazyload"
              alt="{{ variant.image.alt }}"
              data-src="{{ img_url }}"
              data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
              data-aspectratio="{{ product.featured_image.aspect_ratio }}"
              data-sizes="auto"
              data-image>
        <a class="lear-n-more" href="{{ variant.url | within: collection }}">Learn More</a>
      </div>
    </div>
  </div>
 
  <noscript>
    {% capture image_size %}{{ max_height }}x{{ max_height }}{% endcapture %}
    <img class="grid-view-item__image" src="{{ variant.image.src | img_url: image_size, scale: 2 }}" alt="{{ product.featured_image.alt }}" style="max-width: {{ max_height | times: product.featured_image.aspect_ratio }}px;">
  </noscript>
  <div class="left-right-part">
 <div class="left-part">
  <div class="one-g h4 grid-view-item__title product-card__title" aria-hidden="true">{{variant[product_option_key]}} Count</div>
  <div class="one-gg h4 grid-view-item__price product-card__price" aria-hidden="true">{{ variant.price | money  }}</div>
  </div>
 <div class="right-part">
  <div class="one-ggg h4 grid-view-item__plus product-card__plus" aria-hidden="true">+</div>
  <div class="one-gggg h4 grid-view-item__quickadd product-card__quickadd add_t_crt" style="cursor:pointer;" var-id="{{variant.id}}" aria-hidden="true">Quick Add</div>
  </div>
  </div>
  {% render 'price-ui-templates', variant %}
 
</div>