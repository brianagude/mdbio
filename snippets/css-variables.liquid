<style>
  {% assign header_font = settings.type_header_font %}
  {% assign body_font = settings.type_body_font %}
  {% assign button_font = settings.type_buton_font %}

  {{ header_font | font_face }}
  {{ body_font | font_face }}
  {{ button_font | font_face }}

  {%- assign header_font_bold = header_font | font_modify: 'weight', 'bolder' -%}
  {%- assign header_font_italic = body_font | font_modify: 'style', 'italic' -%}
  {%- assign header_font_bold_italic = body_font_bold | font_modify: 'style', 'italic' -%}

  {{ header_font_bold | font_face }}
  {{ header_font_italic | font_face }}
  {{ header_font_bold_italic | font_face }}

  {%- assign body_font_bold = body_font | font_modify: 'weight', 'bolder' -%}
  {%- assign body_font_italic = body_font | font_modify: 'style', 'italic' -%}
  {%- assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic' -%}

  {{ body_font_bold | font_face }}
  {{ body_font_italic | font_face }}
  {{ body_font_bold_italic | font_face }}

  :root  {
    --color-body-text: {{ settings.regular_color }};
    --color-body: {{ settings.shop_bg_color }};
    --color-bg: {{ settings.shop_bg_color }};

    --color-primary: {{ settings.color_primary }}
    ;
    --color-primary-light: {{ settings.color_primary_light }}
    ;
    --color-secondary: {{ settings.color_secondary }}
    ;
    --color-secondary-light: {{ settings.color_secondary_light }}
    ;
    --color-tertiary: {{ settings.color_tertiary }}
    ;
    --color-tertiary-light: {{ settings.color_tertiary_light }}
    ;

    --color-black: {{ settings.color_black }}
    ;
    --color-white: {{ settings.color_white }}
    ;
    --color-light: {{ settings.color_light }}
    ;
    --color-gray: {{ settings.color_gray }}
    ;
    --color-cream: {{ settings.color_light }}
    ;

    --font-header-bold: {{ header_font_bold.weight | default: 700 }}
    ;
    --font-body-bold: {{ body_font_bold.weight | default: 700 }}
    ;

    --font-stack-header: {{ header_font.family }}
    , {{ header_font.fallback_families }}
    ;
    --font-style-header: {{ header_font.style }}
    ;
    --font-weight-header: {{ header_font.weight }}
    ;

    --font-stack-body: {{ body_font.family }}
    , {{ body_font.fallback_families }}
    ;
    --font-style-body: {{ body_font.style }}
    ;
    --font-weight-body: {{ body_font.weight }}
    ;

    --font-stack-button: {{ body_font.family }}
    , {{ body_font.fallback_families }}
    ;
    --font-style-button: {{ body_font.style }}
    ;
    --font-weight-button: {{ body_font.weight }}
    ;

    --font-size-header: {{ settings.type_header_base_size }}
    px;
    --font-size-body: {{ settings.type_base_size }}
    px;
    --font-size-button: {{ settings.type_base_size }}
    px;
  }
</style>